%table.table.table-striped.h-card.vcard
  %tr
    %th ログイン名
    %td #{user['uid'].first} (##{user['uidNumber'].first})
  %tr
    %th 氏名
    %td
      %span.fn.n.p-name
        %span.family-name.p-family-name #{user['sn;lang-ja'].first}
        %span.given-name.p-given-name #{user['givenName;lang-ja'].first}
      (#{user['sn'].first} #{user['givenName'].first})
  - if user['x-kmc-Alias'].first
    %tr
      %th 別名
      %td.nickname.p-nickname
        = user['x-kmc-Alias'].first
  %tr
    %th メールアドレス
    %td
      - if user['mail'].first
        %a.email.u-email{href: "mailto:#{user['mail'].first}"}= user['mail'].first
  %tr
    %th 電話番号
    %td
      - if user['telephoneNumber'].first
        %a.tel.p-tel{href: "tel:#{user['telephoneNumber'].first}"}= user['telephoneNumber'].first
  %tr
    %th 住所
    %td.adr.h-adr
      %span.postal-code.u-postal-code #{user['postalCode'].first}
      %span.extended-address.u-extended-address #{user['postalAddress'].first}
  - if user['x-kmc-UniversityDepartment'].first
    %tr
      %th 所属
      %td #{user['x-kmc-UniversityDepartment'].first} #{user['x-kmc-UniversityStatus'].first}
  - if user['description'].first
    %tr
      %th 備考
      %td.note.p-note= user['description'].first
  %tr
    %th 最終更新
    %td
      - if user['x-kmc-LastModified'].first
        = DateTime.parse(user['x-kmc-LastModified'].first).strftime('%F %T')

%a.btn.btn-primary.btn-block.btn-lg{href: absolute_uri(user['uid'].first, 'edit')} 編集
